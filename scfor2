#!/bin/bash

# Comprobaci√≥n de que se ha pasado un par√°metro
if [[ $# -ne 1 ]]; then
    echo "Uso: $0 <palabra_a_buscar>"
    exit 1
fi

palabra="$1"

# Recorremos todos los archivos del directorio actual
for archivo in *; do
    # Verificar si es un archivo regular
    if [[ -f "$archivo" ]]; then
        # Buscar la palabra en el archivo
        resultado=$(grep -n "$palabra" "$archivo")

        if [[ -n "$resultado" ]]; then
            echo "üîç Coincidencias en el archivo '$archivo':"
            echo "$resultado"
            echo "----------------------------------"
        else
            echo "‚ùå No se encontr√≥ '$palabra' en '$archivo'."
        fi
    fi
done
