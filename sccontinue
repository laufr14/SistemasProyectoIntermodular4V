#!/bin/bash

# Verifica que al menos se pase un par치metro
if [ $# -eq 0 ]; then
    echo "Uso: $0 archivo1 archivo2 ..."
    exit 1
fi

# Recorremos todos los par치metros pasados al script
for item in "$@"; do
    if [ -d "$item" ]; then
        continue  # Si es un directorio, lo ignora y pasa al siguiente par치metro
    fi

    if [ -e "$item" ]; then
        ls -l "$item"  # Muestra la informaci칩n del archivo
    else
        echo "El archivo '$item' no existe."
    fi
done
