#!/bin/bash

#Funci√≥n para mostrar men√∫ 

mostrar_menu() {
clear
echo "=========================="
echo " üöÄ ADMINISTRACI√ìN DEL SISTEMA üöÄ "
echo "==================================="
echo "1) Monitorizar el sistema"
echo "2) Gesti√≥n de usuarios"
echo "3) Seguridad y red"
echo "4) Copias de seguridad"
echo "5) Salir"
echo "==================================="
echo -n "Selecciona una opci√≥n: "

}

#Bucle del men√∫

while true; do
   mostrar_menu
   read opcion

case $opcion in
         1)
            echo "Ejecutando monitorizaci√≥n..."
           ./monitor.sh  # Llama al script de monitorizaci√≥n
            ;;
        2)
            echo "Ejecutando gesti√≥n de usuarios..."
            ./usuarios.sh  # Llama al script de usuarios
            ;;
        3)
            echo "Ejecutando seguridad y red..."
            ./seguridad.sh && ./red.sh  # Llama a los scripts de seguridad y red
            ;;
        4)
            echo "Ejecutando copia de seguridad..."
            ./backup.sh  # Llama al script de backup
            ;;
        5)
            echo "Saliendo..."
            exit 0
            ;;
        *)
            echo "‚ùå Opci√≥n no v√°lida. Intenta de nuevo."
            sleep 1
            ;;
    esac
done
